block navToggle
	-var navToggle = 'Мы'

-var menu = ['Мы', 'Продвижение сайтов', 'Отраслевые решения', 'Другие услуги', 'Портфолио', 'Контакты', 'Блог']

header.header.js-head
	.header__top.js-header
		.container
			//begin hamburger
			.hamburger.hamburger_spin.js-hamburger
				.hamburger__box
					.hamburger__inner
			//end hamburger
			.header__col
				// begin logo
				.header__logo.logo
					a.logo__link(href="index.html")
						.logo__img
							+i('logo-original')
							+i('logo-white-original')
						.logo__text
							+i('logo-text')
				// end logo
			.header__col
				a.header__phone(href='tel:+79091222545')
					+i('phone')
					span.header__phone-text +7 909 122-25-45
			.header__col
				a.header__mail(href='mailto:manager@madmonks.ru')
					+i('mail')
					span.header__mail-text manager@madmonks.ru
			.header__col
				a.header__btn.btn.btn_yellow(href='#') оставить заявку
	.header__footer.side.js-side
		button.side__back.js-side-back ← Вернуться назад
		.side__inner.js-side-inner
			.header__container.container
				//begin menu
				nav.menu.js-menu
					-var i = 0
					each value in menu
						if navToggle === value
							if i == 1
								a.menu__link.menu__link_parent.is-active.js-menu-parent(data-index=i++ + 1 href='javascript: void(0)')= value
							else if i == 2
								a.menu__link.menu__link_parent.is-active.js-menu-parent(data-index=i++ + 1 href='javascript: void(0)')= value
							else
								a.menu__link.is-active(data-index=i++ + 1 href='#')= value
						else
							if i == 1
								a.menu__link.menu__link_parent.js-menu-parent(data-index=i++ + 1 href='javascript: void(0)')= value
							else if i == 2
								a.menu__link.menu__link_parent.js-menu-parent(data-index=i++ + 1 href='javascript: void(0)')= value
							else
								a.menu__link(data-index=i++ + 1 href='#')= value
				//end menu
				//begin menus
				.menus.js-menus(data-child='2')
					a.menus__link(href='#') Продвижение интернет-магазинов
					a.menus__link(href='#') Продвижение сайтов строительных компаний
					a.menus__link(href='#') Продвижение сайтов мебельных компаний
					a.menus__link(href='#') Продвижение сайтов промышленных и производственных компаний
				//end menus
				//begin menus
				.menus.js-menus(data-child='3')
					a.menus__link(href='#') Отраслевые решения 1
					a.menus__link(href='#') Отраслевые сайтов решения test 2
					a.menus__link(href='#') Отраслевые решения 3
					a.menus__link(href='#') Продвижение Отраслевые решения 4
					a.menus__link(href='#') Сайтов промышленных Отраслевые решения 5
					a.menus__link(href='#') Отраслевые решения 6
					a.menus__link(href='#') Отраслевые решения 7
					a.menus__link(href='#') сайтов мебельных Отраслевые решения 8
					a.menus__link(href='#') Отраслевые решения 10
					a.menus__link(href='#') Сайтов Отраслевые решения 11
					a.menus__link(href='#') Отраслевые решения 12
				//end menus
		a.side__btn.btn(href='#') оставить заявку
		//begin cont
		.side__cont.cont
			a.cont__link(href='tel:+79091222545')
				+i('phone')
				span.cont__link-text +7 909 122-25-45
			a.cont__link.cont__link_mail(href='mailto:manager@madmonks.ru')
				+i('mail')
				span.cont__link-text manager@madmonks.ru
